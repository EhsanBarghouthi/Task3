@model category

@section sectionTitle{
    Categories
}

<div class="card card-info">
    <div class="card-header">
        <h3 class="card-title">Horizontal Form</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form class="form-horizontal" action="/Admin/categories/save">
        <div class="card-body">
            <div class="form-group row">
                <label for="categoryName" class="col-sm-2 col-form-label">categoryName</label>
                <div class="col-sm-10">
                    <input name="categoryName" class="form-control" id="categoryName" placeholder="categoryName" value="@Model.categoryName">
                    <span asp-validation-for="categoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label for="categoryType" class="col-sm-2 col-form-label">categoryType</label>
                <div class="col-sm-10">
                    <input name="categoryType" class="form-control" id="categoryType" placeholder="categoryType" value="@Model.categoryType">
                    <span asp-validation-for="categoryType" class="text-danger" ></span>

                </div>
            </div>

       

            <div class="form-group row">
                <div class="offset-sm-2 col-sm-10">
             
                </div>
            </div>
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <button type="submit" class="btn btn-info">Create</button>
            <button type="submit" class="btn btn-default float-right">Cancel</button>
        </div>
        <!-- /.card-footer -->
    </form>
</div>