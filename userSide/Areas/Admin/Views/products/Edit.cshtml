@model userSide.Models.product

@section sectionTitle {
        Products
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Edit Product Form</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" action="/Admin/products/update/" enctype="multipart/form-data">
        <div class="card-body">
            <div class="form-group">
                <label for="productName">Product Name</label>
                <input name="productName" type="text" class="form-control" id="productName" placeholder="Enter The Product Name" value="@Model.productName">
                <span asp-validation-for="productName" class="text-danger"></span>
            </div>
            <div>
                <input hidden name="productId" value="@Model.productId"/>
            </div>

            <div class="form-group">
                <label for="productPrice">Product Price</label>
                <input name="productPrice" type="number" class="form-control" id="productPrice" placeholder="Enter The Product Price" value="@Model.productPrice">
                <span asp-validation-for="productPrice" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label for="productDescription">Product Description</label>
                <input name="productDescription" type="productDescription" class="form-control" id="productDescription" placeholder="Enter The Product Description" value="@Model.productDescription">
                <span asp-validation-for="productDescription" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div>
                        <input name="imageFile" type="file" id="exampleInputFile">
                        <img src="~/images/@Model.imagePhoto" alt="Product Image" width="250" height="150" />

                        <small class="form-text text-muted">
                            Previously uploaded: @ViewBag.UploadedFile
                        </small>

                    </div>

                </div>
                <span asp-validation-for="imagePhoto" class="text-danger"></span>

            </div>


            @*     <div class="input-group">
                <div class="custom-file">
                    <input name="imageFile" type="file" class="custom-file-input" id="exampleInputFile">
                    <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                </div>
                <div class="input-group-append">
                    <span class="input-group-text">Upload</span>
                </div>
                <span asp-validation-for="img" class="text-danger"></span>
            </div> *@


            <!-- make sure the attribute enctype is set to multipart/form-data -->

            <div class="col-sm-6">
                <!-- select -->
                <div class="form-group">
                    <label asp-for="categoryId" class="control-label">Category</label>
                    <select asp-for="categoryId" class="form-control">
                        <option value="" selected disabled>-- Select Category --</option>
                        @foreach (var item in ViewBag.categories)
                        {
                            <option value="@item.categoryId"> @item.categoryId || @item.categoryName || @item.categoryType</option>
                        }
                    </select>
                    <span asp-validation-for="categoryId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <!-- /.card-body -->

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>