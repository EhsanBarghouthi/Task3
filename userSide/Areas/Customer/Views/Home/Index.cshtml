@section title {
                    Welcome To Customer Home Page
}

<div class="text-center">
    <h1 class="display-4">Welcome For All</h1>
</div>


<section class="py-5">
    <h2 class="display-4 fw-bolder">Categories</h2>
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center ">

            @foreach (var item in ViewBag.categories)
            {

                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>

                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder mt-2"> @item.categoryName</h5>
                                <h6 class="fw-bolder mt-3"> @item.categoryType</h6>


                            </div>
                        </div>

                    </div>

                </div>
            }
        </div>
    </div>

</section>


<section class="py-5">
    <h2 class="display-4 fw-bolder">Products</h2>
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
            @foreach(var item in ViewBag.products)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <div style="height:50%">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <!-- Product image-->
                        <div>
                            <img class="card-img-top" src="/images/@item.imagePhoto" alt="Category image for @item.productName">
                        </div>
                        </div>
                        <div style="height:50%">
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">@item.productName</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                                <span class="text-muted text-decoration-line-through">$@item.productPrice</span>
                                $@item.productPrice
                            </div>
                        </div>
                        </div> 
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                        </div>
                    </div>

                </div>
            }
        </div>
    </div>
</section>





